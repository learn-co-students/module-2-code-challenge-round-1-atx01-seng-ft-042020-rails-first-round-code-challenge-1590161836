<h2>Create Heroine</h2>

<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <%= f.collection_select :power_id, Power.all, :id, :name, prompt: "Choose a super power!" %><br>

    <%= f.submit %>
<% end %>

<% if @heroine.errors.any? %>
    <br><br>
    <% @heroine.errors.full_messages.each do |msg| %>
        <%= msg %><br>
    <% end %>
<% end %>